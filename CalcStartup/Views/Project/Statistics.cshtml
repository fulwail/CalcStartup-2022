    </div> 
<body>
<div style="width: 900px; height: 800px">
    <canvas id="scatterChart"></canvas>
</div>



<script type="text/javascript">
     
jQuery(function($) {
  
    GetChartData();
})

// ajax call to get chart data from back end
GetChartData = function () {
    var ProjectId=document.getElementById('ProjectId').value;
    var data = { Id: ProjectId };
    $.ajax({
        url: '/Project/CreateChart/',
        data: data,  
        type: "post",
        dataType: "json",
        contentType: "application/x-www-form-urlencoded",
        success: function (respnse) {
         console.log(respnse);
            var canvasElement = document.getElementById("scatterChart");
            var ctx = canvasElement.getContext('2d');
           BindChartDataToCanvasElement(respnse, ctx);
        }
    })
}
BindChartDataToCanvasElement = function (graphData, ctx) {
     console.log(graphData);
    var graphData = JSON.parse(graphData);
    console.log(graphData);
    var myChart = new Chart(ctx, {
        type: 'scatter',
        height: "230px",
        width: "300px",
        responsive: true,
        animation: true,
        stacked: false,
        legend: { position: 'bottom' },

        data: graphData
        , options: {
            events: ['click'],
            scaleShowValues: true,
            scales: {
                yAxes: [{
                    display: true,
                    scaleLabel: {
                        display: true,
                        labelString: 'Доход'
                    },
                    ticks: {
                        beginAtZero: true,
                    }
                }],
                xAxes: [{
                    display: true,
                    scaleLabel: {
                        display: true,
                        labelString: 'Объем производства в единицах'
                    },
                    ticks: {
                        beginAtZero: true,
                        min: 0,
                        //max: 1470,
                        //stepSize: 100
                    },
                    type: 'linear',
                    position: 'bottom'
                }]

            }
        }
    });
}
 
</script>

