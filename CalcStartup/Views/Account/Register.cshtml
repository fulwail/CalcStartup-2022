@model CalcStartup.ViewModels.RegisterViewModel
<form method="post" asp-controller="Account" asp-action="Register">
    <div asp-validation-summary="ModelOnly"></div>

         <div class="container d-flex justify-content-center align-items-center">
    <div class="card col-md-8">
        <div class="p-3 border-bottom d-flex align-items-center justify-content-center">
            <h5>Регистрация нового пользователя</h5>
        </div>

        <div class="p-3 px-4 py-4 border-bottom">  <input type="text" class="form-control mb-2" placeholder="Email"  asp-for="Email" />
         <span asp-validation-for="Email"></span>
        <br/>
           <div class="form">  
                <input  type="text" class="form-control" placeholder="Логин"  asp-for="UserName"/> 
                  <span asp-validation-for="UserName"></span>
                  <br/>
               </div>  
             <div class="form">  
                   <input  type="text" class="form-control" placeholder="Пароль"  asp-for="Password"/> 
                  <span asp-validation-for="Password"></span>
                   <br/>
                  </div>  
                  <div class="form">  
                   <input  type="password" class="form-control" placeholder="Подтвердить пароль"  asp-for="PasswordConfirm"/> 
                  <span asp-validation-for="PasswordConfirm"></span>
                <br/>
                  <p></p>
                <button class="btn btn-danger btn-block continue col-md-12">Регистрация</button>
            <div class="d-flex justify-content-center align-items-center mt-3 mb-3"> 
            </div>  
        </div>
              </div>
      </div>
    </div>
</form>