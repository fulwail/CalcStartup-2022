<script src="https://yastatic.net/jquery/3.3.1/jquery.min.js"></script>
<link rel="stylesheet" href="https://cdn.datatables.net/1.10.2/css/jquery.dataTables.min.css">
<script type="text/javascript" src="https://cdn.datatables.net/1.10.2/js/jquery.dataTables.min.js"></script>

@model CalcStartup.ViewModels.CompanyViewModel
@{
    ViewBag.Title = "Компании";
}
<div class="container">
    <div class="row header" style="text-align:center">
        <h3>Список компаний</h3>
    </div>
      <p></p>
                <label>Добавить компанию:</label>
                <p></p>
                @using (Html.BeginForm("Create", "Company", FormMethod.Post))
                {
                    <input  placeholder="Наименование"  style="height:33px; margin-right: 10px" class="col-md-2" title="Наименование компании" name="Name"
                           id="Name" type="text" value=""/>            
                     <input type="image" src="~/resources/AddIcon.png" alt="Submit" width="25" height="25">
                }
                   <p></p>
                         @if (Model.Message != null)
                        {
                            <label style="color:red;">@Model.Message</label>
                        }
                <br />

    <table id="Company" class="table table-striped table-bordered" style="width:100%; margin-left: auto; margin-right: auto;">
        <thead>
            <tr>
                <th style="text-align: center">Наименование</th>         
                 <th style="text-align: center">Действие</th>   
            </tr>
        </thead>
          @foreach (var company in @Model.Companies)
                            {
                                <tr>
                                    <td style="text-align: left"> @company.Name</td>    
                                    <td style="text-align: center">
                                        @using (Html.BeginForm("Delete", "Company", FormMethod.Post))
                                        {                                      
                                            <button type="submit" class="btn btn-sm btn-danger"> Удалить   </button>
                                            <input type="hidden" name="Id" value="@company.Id" />
                                        }
                                    </td>
                                </tr>

                            }
        
    </table>
</div>
